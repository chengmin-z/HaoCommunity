/* pages/profile/profile.wxss */
.profileView {
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-direction: column;
}

.profileView .profileOperator {
  height: 40%;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.profileOperator .loginButton {
  font-size: medium;
  font-weight: bold;
  margin-left: 5%;
  width: 43%;
  background-color: var(--lightPurpleColor1);
  color: white;
}

.profileOperator .loginButtonHover {
  background-color: var(--purpleColor);
}

.profileOperator .registerButton {
  font-size: medium;
  font-weight: normal;
  margin-right: 5%;
  width: 43%;
  color: var(--grayColor);
}

.profileView .profileInfoView {
  height: 60%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.profileInfoView .h2Text {
  flex: 1;
  margin-left: 5%;
}

.profileInfoView .avatar {
  width: 90rpx;
  height: 90rpx;
  margin-right: 5%;
  align-items: center;
  display: block;
}

.avatar .image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}