/* pages/publish/publish.wxss */
.formImgItem {
  margin-left: 4%;
  height: 120rpx;
  width: 100%;
  display: flex;
  align-items: left;
  margin-bottom: 3%;
  flex-direction: column;
}

.imgInputContainer {
  display: flex;
  flex-direction: row;
}

.imgInputContainer .normalButton {
  height: 60rpx;
  font-size: small;
  margin-left: 0;
  margin-top: 2%;
}

.imgInputContainer .avatar {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin-right: 2%;
  border: var(--lightPurpleColor1) solid 3rpx;
}

.avatar .image {
  display: block;
  width: 100%;
  height: 100%;
}

