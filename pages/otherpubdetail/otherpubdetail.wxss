/* pages/otherpubdetail/otherpubdetail.wxss */
.avatar-info {
  margin-top: 25rpx;
  margin-bottom: 5rpx;
}

.listItem-avatar {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.listItem-avatar .iconfont {
  margin-left: 2%;
  text-align: left;
  font-size: larger;
  font-weight: bold;
  color: var(--themeColor);
}

.listItem .normalButton {
  height: 60rpx;
  width: 200rpx;
  font-size: small;
  margin-left: 4%;
}

.listItem .avatar {
  height: 80rpx;
  width: 80rpx;
  margin-left: 4%;
}

.avatar .image {
  display: block;
  border-radius: 0;
  height: 100%;
  width: 100%;
}

.submitButton {
  margin-top: 40rpx;
}

.replyListItem {
  height: 150rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
}

.replyListItem .cardContainer {
  width: 90%;
  height: 90%;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 5px 5px 5px #e6e6e6;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cardContainer .textInfo {
  display: flex;
  flex: 1;
  width: 70%;
  flex-direction: column;
}

.cardContainer .iconfont {
  margin-right: 3%;
  text-align: left;
  font-weight: bolder;
  font-size: x-large;
  color: var(--lightPurpleColor1);
  border-radius: 20%;
}

.textInfo .textInfo-line {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}

.cardContainer .replyItemState {
  margin-right: 3%;
}

.textInfo-line .iconfont {
  margin-right: 3%;
  text-align: left;
  font-weight: bolder;
  font-size: large;
  color: var(--fontColor);
  background-color: white;
}

.textInfo-line .h3Text {
  font-weight: 450;
  margin-left: 20rpx;
}

.textInfo-line .h4Text {
  font-weight: normal;
}

.textInfo .lineSpacer {
  height: 15rpx;
}

.listHeader {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.listHeader .headerTitle {
  display: flex;
  flex: 1;
  margin-left: 4%;
  flex-direction: column;
}

.headerTitle .h3Text {
  width: fit-content;
  font-weight: bold;
  margin-left: 0;
  text-align: left;
  border-bottom: var(--lightPurpleColor1) solid 6px;
}